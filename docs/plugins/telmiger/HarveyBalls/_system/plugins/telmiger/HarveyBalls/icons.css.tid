svg.em-icon {
    width: 1em;
    height: 1em;
    margin-bottom: -0.125em;
}

/* Colours */

svg.em-icon.ball-empty {
    fill: rgba(255,0,0,0.95);
}
svg.em-icon.ball-full {
    fill: green;
}
svg.em-icon.ball-quarter {
    fill: orange;
}
svg.em-icon.ball-half {
    fill: #000;
}
svg.em-icon.ball-quarter-empty {
    fill: blue;
}